<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.price_king"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Starting from the level-11 to level-18, compatible with level-19 -->>
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- the MainAtivity shows the mainpage -->>
        <activity
            android:name="com.example.price_king.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- the Activity of the up-left corner, 1st page -->>
        <activity
            android:name="com.example.price_king.LocationFindActivity"
            android:label="@string/title_activity_location_find" >
        </activity>
        
        <!-- the Activity of the up-right corner, 1st page -->>
        <activity
            android:name="com.example.price_king.AboutPageActivity"
            android:label="@string/title_activity_about_page" >
        </activity>
        
    </application>

</manifest>
